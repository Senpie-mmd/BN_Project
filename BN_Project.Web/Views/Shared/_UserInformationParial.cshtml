@model UserInformationViewModel

<div class="ui-box bg-white mb-5">
    <div class="ui-box-title">اطلاعات شخصی</div>
    <div class="ui-box-content">
        <div class="row">
            <div class="col-lg-6 mb-3">
                <div class="border-bottom py-2">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="fs-7 fw-bold text-dark">@Model.FullName</div>
                        <button class="btn btn-circle btn-outline-light"
                                data-remodal-target="personal-info-fullname-modal">
                            <i class="ri-ball-pen-fill"></i>
                        </button>
                    </div>
                    <div class="fs-6 fw-bold text-muted">@Model.FullName</div>
                </div>
            </div>
            <div class="col-lg-6 mb-3">
                <div class="border-bottom py-2">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="fs-7 fw-bold text-dark">شماره تلفن همراه</div>
                        <button class="btn btn-circle btn-outline-light"
                                data-remodal-target="personal-info-phone-number-modal">
                            <i class="ri-ball-pen-fill"></i>
                        </button>
                    </div>
                    <div class="fs-6 fw-bold text-muted">@Model.PhoneNumber</div>
                </div>
            </div>
            <div class="col-lg-6 mb-3">
                <div class="border-bottom py-2">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="fs-7 fw-bold text-dark">پست الکترونیک</div>
                        <button class="btn btn-circle btn-outline-light"
                                data-remodal-target="personal-info-email-modal">
                            <i class="ri-ball-pen-fill"></i>
                        </button>
                    </div>
                    <div class="fs-6 fw-bold text-muted">@Model.Email</div>
                </div>
            </div>
            <div class="col-lg-6 mb-3">
                <div class="border-bottom py-2">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="fs-7 fw-bold text-dark">رمز عبور</div>
                        <button class="btn btn-circle btn-outline-light"
                                data-remodal-target="personal-info-change-password-modal">
                            <i class="ri-ball-pen-fill"></i>
                        </button>
                    </div>
                    <div class="fs-6 fw-bold text-muted">-</div>
                </div>
            </div>
        </div>
    </div>
</div>