@model AddCategoriesViewModel
@{
    Layout = "Admin/_AdminLayout";
    ViewData["Title"] = "افزودن دسته بندی";
}

<link rel="stylesheet" href="~/cropper/css/cropper.css" />
<div class="widget-body">
    <div id="registration-form">
        <form method="post" asp-controller="Admin" asp-action="AddCategory">

            <div class="form-title">
                افزودن دسته بندی جدید
            </div>

            <div class="form-group">
                <span class="input-icon icon-right">
                    <input type="text" asp-for="Name" class="form-control" placeholder="نام دسته بندی">
                    <span asp-validation-for="Name"></span>
                    <i class="glyphicon glyphicon-user circular"></i>
                </span>
            </div>
            <div class="form-group">
                @{
                    SelectList categories = new SelectList(Model.Categories, "Id", "Name");
                }
                <select asp-for="CategoryId" asp-items="categories" class="form-control">
                    <option value="">
                        انتخاب دسته بندی مادر
                    </option>
                </select>
            </div>
            <button type="submit" class="btn btn-blue">افزودن دسته بندی</button>
        </form>
    </div>
</div>

@section breadcrumb {
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a asp-action="Index">خانه</a>
            </li>
            <li class="active">افزودن کاربر</li>
        </ul>
    </div>
}

@section pageHeader {
    <div class="page-header position-relative">
        <div class="header-title">
            <h1>
                افزودن کاربر
            </h1>
        </div>
        <!--Header Buttons-->
        <div class="header-buttons">
            <a class="sidebar-toggler" href="#">
                <i class="fa fa-arrows-h"></i>
            </a>
            <a class="refresh" id="refresh-toggler" href="">
                <i class="glyphicon glyphicon-refresh"></i>
            </a>
            <a class="fullscreen" id="fullscreen-toggler" href="#">
                <i class="glyphicon glyphicon-fullscreen"></i>
            </a>
        </div>
        <!--Header Buttons End-->
    </div>
}