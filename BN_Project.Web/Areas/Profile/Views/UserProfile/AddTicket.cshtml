@using BN_Project.Domain.Enum.Ticket;
@model AddTicketViewModel
@{
    Layout = "Profile/_ProfileLayout";
    ViewData["Title"] = "افزودن تیکت";
}

<div class="col-xl-9 col-lg-8 col-md-7">
    <div class="alert alert-warning alert-dismissible fade show mb-5" role="alert">
        <div>
            سفارش شما در انتظار پرداخت است. برای جلوگیری از لغو سفارش، لطفا پرداخت را انجام دهید.
            <a href="#" class="btn btn-sm btn-primary mx-3">سفارش های من</a>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <div class="ui-box bg-white mb-5">
        <div class="ui-box-title">ایجاد تیکت جدید</div>
        <div class="ui-box-subtitle">
            فرم زیر را پر کنید (توضیحات کامل تر روند پاسخ دهی را کوتاه تر
            می
            کند.)
        </div>
        <div class="ui-box-content">
            <form asp-action="AddTicket" asp-controller="UserProfile" class="add-ticket-form">
                <input type="hidden" asp-for="OwnerId" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-element-row mb-5">
                            <label class="label">موضوع</label>
                            <input type="text" class="form-control" placeholder="" asp-for="Subject">
                            <span asp-validation-for="Subject"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-element-row mb-5">
                            <label class="label">بخش</label>
                            <select class="select2" id="department" asp-for="SectionId">
                                @foreach (var item in Model.Sections)
                                {
                                    <option value="@item.Id">
                                        @item.Name
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="SectionId"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-element-row mb-5">
                            <label class="label">اولویت</label>
                            <select class="select2" id="priority" asp-for="Priority" asp-items="Html.GetEnumSelectList<Priority>()">
                            </select>
                            <span asp-validation-for="Priority"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-element-row mb-5">
                            <label class="label">پیام</label>
                            <textarea rows="5" class="form-control" asp-for="Message"
                                      placeholder="متن پیام"></textarea>
                            <span asp-validation-for="Message"></span>
                        </div>
                    </div>
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-primary px-4">
                            ثبت و ارسال <i class="ri-ball-pen-line ms-2"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>