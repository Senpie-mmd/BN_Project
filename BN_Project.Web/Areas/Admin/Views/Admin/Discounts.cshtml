@model List<DiscountViewModel>
@{
    Layout = "Admin/_AdminLayout";
    ViewData["Title"] = "تخفیف ها";
}

<div class="well with-header  with-footer">
    <a asp-action="AddDiscount" class="btn btn-success">افزودن تخفیف جدید</a>
    <br />
    <table class="table table-hover table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    کد تخفیف
                </th>
                <th>
                    تاریخ شروع
                </th>
                <th>
                    تاریخ اتمام
                </th>
                <th>
                    درصد
                </th>
                <th>
                    محصولات
                </th>
                <th>
                    عملیات
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 0;
                foreach (var item in Model)
                {
                    counter += 1;
                    <tr>
                        <td>@counter</td>
                        <td>@item.Code</td>
                        <td>@item.StartDate?.ConvertToShamsi()</td>
                        <td>@item.ExpireDate?.ConvertToShamsi()</td>
                        <td>@item.Percent</td>
                        <td>
                            <a asp-action="ViewProductsForDiscount" asp-controller="admin" asp-route-Id="@item.Id">
                                مشاهده
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-controller="Admin" asp-action="RemoveDiscount" onclick="is_delete(this)" asp-route-Id="@item.Id">
                                <i class="fa fa-times"></i>
                                حذف
                            </a>
                            <a class="btn btn-yellow" asp-controller="Admin" asp-action="EditDiscount" asp-route-Id="@item.Id">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                                ویرایش
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section breadcrumb {
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a asp-action="Index">خانه</a>
            </li>
            <li class="active">تخفیف ها</li>
        </ul>
    </div>
}

@section pageHeader {
    <div class="page-header position-relative">
        <div class="header-title">
            <h1>
                تخفیف ها
            </h1>
        </div>
        <!--Header Buttons-->
        <div class="header-buttons">
            <a class="sidebar-toggler" href="#">
                <i class="fa fa-arrows-h"></i>
            </a>
            <a class="refresh" id="refresh-toggler" href="">
                <i class="glyphicon glyphicon-refresh"></i>
            </a>
            <a class="fullscreen" id="fullscreen-toggler" href="#">
                <i class="glyphicon glyphicon-fullscreen"></i>
            </a>
        </div>
        <!--Header Buttons End-->
    </div>
    }
@section Scripts {
    <script src="~/js/site.js"></script>
}