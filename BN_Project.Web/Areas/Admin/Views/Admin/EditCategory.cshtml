@model EditCategoryViewModel
@{
    Layout = "Admin/_AdminLayout";
    ViewData["Title"] = "ویرایش دسته بندی";
}

<link rel="stylesheet" href="~/cropper/css/cropper.css" />
<div class="widget-body">
    <div id="registration-form">
        <form method="post" action="/Admin/EditCategory">
            <input type="hidden" asp-for="Id" />
            <div class="form-title">
                ویرایش دسته بندی
            </div>

            <div class="form-group">
                <span class="input-icon icon-right">
                    <input type="text" asp-for="Name" class="form-control" placeholder="نام دسته بندی">
                    <span asp-validation-for="Name"></span>
                    <i class="glyphicon glyphicon-user circular"></i>
                </span>
            </div>
            <div class="form-group">
                @{
                    SelectList categories = new SelectList(Model.Categories, "Id", "Title", Model.CategoryId);
                }
                <select asp-for="CategoryId" class="form-control" asp-items="@categories">
                    <option value="0">
                        انتخاب دسته بندی مادر
                    </option>
                </select>
            </div>
            <button type="submit" class="btn btn-blue">ویرایش دسته بندی</button>
        </form>
    </div>
</div>

@section breadcrumb {
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a asp-action="Index">خانه</a>
            </li>
            <li class="active">ویرایش دسته بندی</li>
        </ul>
    </div>
}

@section pageHeader {
    <div class="page-header position-relative">
        <div class="header-title">
            <h1>
                ویرایش دسته بندی
            </h1>
        </div>
        <!--Header Buttons-->
        <div class="header-buttons">
            <a class="sidebar-toggler" href="#">
                <i class="fa fa-arrows-h"></i>
            </a>
            <a class="refresh" id="refresh-toggler" href="">
                <i class="glyphicon glyphicon-refresh"></i>
            </a>
            <a class="fullscreen" id="fullscreen-toggler" href="#">
                <i class="glyphicon glyphicon-fullscreen"></i>
            </a>
        </div>
        <!--Header Buttons End-->
    </div>
}