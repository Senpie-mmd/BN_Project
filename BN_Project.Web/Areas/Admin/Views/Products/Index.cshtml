@{
    List<ChartDataViewModel> past10Days = ViewData["ChartPast10Days"] as List<ChartDataViewModel>;
    List<ChartDataViewModel> thisMonths = ViewData["ChartThisMonth"] as List<ChartDataViewModel>;
    List<ChartDataViewModel> Most5Popular = ViewData["Chart5Popular"] as List<ChartDataViewModel>;

    Layout = "Admin/_AdminLayout";
    ViewData["Title"] = "ادمین";
}

<div class="page-body">
    <div class="row">
        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
            <div class="row databox databox-xxlg databox-vertical databox-shadowed bg-white radius-bordered padding-5">
                <div class="col-md-6 box-chart">

                    @foreach (var item in past10Days)
                    {
                        <input class="sell-data-chart-10-days" data="@item.Count" title="@item.Title" hidden />
                    }

                    <canvas style="width: 100%; height: 100%;" id="myChart"></canvas>
                </div>
                <div class="col-md-6 chart-title-box">
                    <h3 class="chart-title">محصولات با بیشترین فروش طی 10 روز اخیر</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
            <div class="row databox databox-xxlg databox-vertical databox-shadowed bg-white radius-bordered padding-5">
                <div class="col-md-6 box-chart">

                    @foreach (var item in thisMonths)
                    {
                        <input class="sell-data-chart-10-days" data="@item.Count" title="@item.Title" hidden />
                    }

                    <canvas style="width: 100%; height: 100%;" id="myChart"></canvas>
                </div>
                <div class="col-md-6 chart-title-box">
                    <h3 class="chart-title">محصولات با بیشترین فروش در ماه جاری</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
            <div class="row databox databox-xxlg databox-vertical databox-shadowed bg-white radius-bordered padding-5">
                <div class="col-md-6 box-chart">

                    @foreach (var item in Most5Popular)
                    {
                        <input class="sell-data-chart-10-days" data="@item.Count" title="@item.Title" hidden />
                    }

                    <canvas style="width: 100%; height: 100%;" id="myChart"></canvas>
                </div>
                <div class="col-md-6 chart-title-box">
                    <h3 class="chart-title">5 محصول پرفروش کل سایت</h3>
                </div>
            </div>
        </div>
    </div>
</div>

@section breadcrumb {
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a asp-action="Index">خانه</a>
            </li>
            <li class="active">داشبورد</li>
        </ul>
    </div>
}

@section pageHeader {
    <div class="page-header position-relative">
        <div class="header-title">
            <h1>
                داشبورد
            </h1>
        </div>
        <!--Header Buttons-->
        <div class="header-buttons">
            <a class="sidebar-toggler" href="#">
                <i class="fa fa-arrows-h"></i>
            </a>
            <a class="refresh" id="refresh-toggler" href="">
                <i class="glyphicon glyphicon-refresh"></i>
            </a>
            <a class="fullscreen" id="fullscreen-toggler" href="#">
                <i class="glyphicon glyphicon-fullscreen"></i>
            </a>
        </div>
        <!--Header Buttons End-->
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/chart.js"></script>
}